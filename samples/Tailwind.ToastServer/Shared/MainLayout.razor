@namespace Tailwind.ToastServer.Shared
@using Tailwind.Toast
@using Toast.Configuration
@inherits LayoutComponentBase


<TailwindToasts Timeout="10" />

<div class="flex h-screen overflow-hidden bg-gray-100">
    <div class="hidden lg:flex lg:flex-shrink-0">
        <div class="flex flex-col w-64">
            <div class="flex flex-col flex-grow pt-5 pb-4 overflow-y-auto bg-blue-500">
                <div class="flex items-center flex-shrink-0 px-4">
                    <h1 class="text-lg text-white">Tailwind Toasts</h1>
                </div>
                <nav class="flex flex-col flex-1 mt-5 overflow-y-auto divide-y divide-cyan-800" aria-label="Sidebar">
                    <div class="px-2 space-y-1">
                        <a href="/"
                            class="flex items-center px-2 py-2 text-sm font-medium leading-6 text-white rounded-md group"
                            aria-current="page">
                            <svg class="w-6 h-6 mr-4 text-cyan-200" xmlns="http://www.w3.org/2000/svg" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                            Home
                        </a>
                        <a href="/fetchdata"
                            class="flex items-center px-2 py-2 text-sm font-medium leading-6 text-white rounded-md group"
                            aria-current="page">
                            <svg class="w-6 h-6 mr-4 text-cyan-200" xmlns="http://www.w3.org/2000/svg" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                            Fetch Data
                        </a>
                    </div>
                </nav>
            </div>
        </div>
    </div>

    <div class="flex-1 p-12 overflow-auto focus:outline-none">
        <main class="relative z-0 flex-1 pb-8 overflow-y-auto">
            @Body
        </main>
    </div>
</div>
